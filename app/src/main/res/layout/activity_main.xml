<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cave"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/moon"
        android:layout_width="139dp"
        android:layout_height="144dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/moon" />

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="178dp"
        android:layout_height="105dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toStartOf="@+id/moon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/bat"
        android:layout_width="260dp"
        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toTopOf="@+id/pumpkin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bat" />

    <Button
        android:id="@+id/pumpkin"
        android:layout_width="103dp"
        android:layout_height="96dp"
        android:layout_marginStart="247dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pump"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/worm"
        android:layout_width="293dp"
        android:layout_height="301dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pumpkin"
        app:srcCompat="@drawable/grub" />

    <ImageView
        android:id="@+id/web"
        android:layout_width="261dp"
        android:layout_height="254dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pumpkin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.211"
        app:srcCompat="@drawable/spider2" />

    <ImageView
        android:id="@+id/spider"
        android:layout_width="61dp"
        android:layout_height="125dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/worm"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spider3" />

</android.support.constraint.ConstraintLayout>